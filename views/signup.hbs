  <section class="signup-container">
  
    <div class="image-container">
        <img  class="cont-logo"  src="../images/2.png"/>
        <p>Streming your business with E-TimeFlow The Ultimate Solution Provider</p>
      </div>
    
    <div class="form-container">
      <h3>Welcome to e-timeflow</h3>
      <p>create an account</p>
      <form action="/signup" method="POST">
       
        
        <input type="text" id="name" name="name"  placeholder="name"required>
        <div class="icon"><i class="fa-solid fa-person-dress"></i></div>
      
        <input type="text" id="company" name="company"  placeholder="company name" required>
        <div class="icon1"><i class="fa-solid fa-person-dress"></i></div>
        
        <input type="email" id="email" name="email" placeholder="email" required>
        <div class="icon2"><i class="fa-solid fa-envelope-open-text"></i></div>
       
        <input type="tel" id="phone" name="phone" placeholder="phone" required>
        <div class="icon3"><i class="fa-solid fa-phone-volume"></i></div>
        
        <input type="password" id="password" name="password" placeholder="password" required>
        <div class="icon4"><i class="fa-solid fa-lock"></i></div>
     
        <input type="password" id="confirmPassword" name="confirmPassword"  placeholder="conform password" required>
        <div class="icon5"><i class="fa-solid fa-lock"></i></div>
        <button type="submit">Signup</button>
       
      </form>
      
